{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES5",
    "lib": ["ES6", "DOM", "ES2015", "ES2016", "ES2017"],
    "typeRoots": ["./node_modules/@types", "./design-system/src/types"],
    "declaration": true,
    "outDir": "design-system/lib/esm",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["design-system/src/**/*"],
  "exclude": [
    "storybook",
    "assets",
    "__generated__",
    "web-build",
    "node_modules",
    "design-system/lib",
    "design-system/src/reportWebVitals.js",
    "design-system/src/setupTests.js"
  ],
}
