{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES5",
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ESNext"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "declaration": true,
    "outDir": "lib/esm",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "stories"
  ],
}
